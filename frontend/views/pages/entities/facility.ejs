<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head'); %>
    </head>

    <body>
        <header>
            <%- include('../../partials/header'); %>
        </header>

        <main>
            <!--If Facility exists, render a table; otherwise throw an error paragraph-->
            <% if (facility) { %>

                <!--Add a facility-->
                <form action="/add_facility" method="post">
                    <h2>Add Facility</h2>
                    <ul>
                        <li>
                            <label for="FACILITY_NAME">Name: </label>
                            <input type="text" id="FACILITY_NAME" name="FACILITY_NAME" required>
                        </li>
                        <li>
                            <button type="submit">Add Facility</button>
                        </li>
                    </ul>
                </form>

                <!-- Update a facility -->
                <form action="/update_facility" method="post">
                    <h2>Update Facility</h2>
                    <ul>
                        <li>
                            <label for="FACILITY_NAME">Name: </label>
                            <input type="text" id="FACILITY_NAME" name="FACILITY_NAME" required>
                        </li>
                        <li>
                            <button type="submit">Update Facility</button>
                        </li>
                    </ul>
                </form>

                <!-- Delete a facility -->
                <form action="/delete_facility" method="post">
                    <h2>Delete Facility</h2>
                    <ul>
                        <li>
                            <label for="FACILITY_NAME">Name: </label>
                            <input type="text" id="FACILITY_NAME" name="FACILITY_NAME" required>
                        </li>
                        <li>
                            <button type="submit">Delete Facility</button>
                        </li>
                    </ul>
                </form>

                <!--Quick Table Summary: Get All-->
                <table>
                    <tr>
                        <th>Facility Name</th>
                    </tr>
                    <% for (const instance of facility) { %>
                        <tr>
                            <td><%= instance["FACILITY_NAME"] %></td>
                        </tr>
                    <% } %>
                </table>
            <% } else { %>
                <p>No data in the table exists</p>
            <% } %>
        </main>

        <footer>
            <%- include('../../partials/footer'); %>
        </footer>
    </body>
</html>